[Unit]
Description=Chessu backend server
After=network.target

[Service]
User={{ USERNAME }}
WorkingDirectory=/home/{{ USERNAME }}/chessu/server
ExecStart=/usr/bin/pm2-runtime start dist/server.js --name chessu-server
Restart=always
Environment=NODE_ENV=production
StandardOutput=append:/var/log/chessu-server.log
StandardError=append:/var/log/chessu-server-error.log

[Install]
WantedBy=multi-user.target
